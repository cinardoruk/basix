extends base.pug

block content
  .container
    .row.min-vh-100.align-items-center.justify-content-center
      .col-md-8.col-lg-6.text-center
        .hero-section
          h1.display-1.fw-bold.mb-4 basix
          p.lead.text-muted.mb-4 A boilerplate for building simple SSR web apps fast.
          .tech-stack.mb-5
            a.badge.text-decoration-none.bg-primary.me-2.mb-2(href="https://expressjs.com/" target="_blank" rel="noopener noreferrer") Express
            a.badge.text-decoration-none.bg-success.me-2.mb-2(href="https://pugjs.org/" target="_blank" rel="noopener noreferrer") Pug
            a.badge.text-decoration-none.bg-info.me-2.mb-2(href="https://htmx.org/" target="_blank" rel="noopener noreferrer") HTMX
            a.badge.text-decoration-none.bg-warning.text-dark.me-2.mb-2(href="https://getbootstrap.com/" target="_blank" rel="noopener noreferrer") Bootstrap
            a.badge.text-decoration-none.bg-secondary.me-2.mb-2(href="https://www.sqlite.org/" target="_blank" rel="noopener noreferrer") SQLite
          .d-grid.gap-2.d-sm-flex.justify-content-sm-center
            a.btn.btn-primary.btn-lg.px-4.gap-3(href="/health") Check Health
            a.btn.btn-outline-secondary.btn-lg.px-4(href="https://github.com/cinardoruk/basix" target="_blank") View on GitHub
